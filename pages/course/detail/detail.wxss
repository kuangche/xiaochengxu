page {
  background: #fff;
}

.courseDetail {
  padding: 50rpx 66rpx;
}

.courseDetail .info {
  margin-bottom: 20rpx;
}

.courseDetail .info>text {
  color: #999;
  margin-right: 20rpx;
}

.courseDetail .title {
  font-size: 44rpx;
  color: #333;
  margin-bottom: 30rpx;
}

.courseDetail .article {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 40rpx;
}
.starList{
  width:100%;
  height: auto;
  max-height:224px;
  background:rgba(246,246,246,1);
  opacity:1;
  border-radius:12px;
  overflow: auto;
  padding: 20rpx 30rpx;
}
.starList>view{
  margin-bottom: 10rpx;
  display: flex;
}
.starList>view text{
  display: inline-block;
  flex: 1;
  text-align: left;
}

.star {
  width: 180rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background: linear-gradient(90deg, rgba(70, 144, 255, 1) 0%, rgba(0, 102, 255, 1) 100%);
  box-shadow: 0px 6rpx 12rpx rgba(0, 102, 255, 0.2);
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  position: fixed;
  bottom: 100rpx;
  right: 180rpx;
}
.star image{
  width: 42rpx;
  height: 40rpx;
  display: inline-block;
  margin-right: 10rpx;
}
.star text{
  font-size: 26rpx;
}
.star.disabled{
  opacity: 0.5
}
.share {
  width:100rpx;
  height:100rpx;
  border-radius: 50rpx;
  background:rgba(42,42,42,1);
  box-shadow:0px 8px 20px rgba(0,0,0,0.2);
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  position: fixed;
  bottom: 100rpx;
  right: 50rpx;
}
.share image{
  width: 34rpx;
  height: 36rpx;
}

.modal-content button{
  width: 200rpx;
  padding: 0rpx;
  margin: 0 20rpx;
}
.modal-content button.shibai{
  background:linear-gradient(90deg,rgba(254,108,99,1) 0%,rgba(254,108,99,1) 100%);
}
