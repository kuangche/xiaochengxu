page {
  background: #fff;
}

.courseDetail {
  padding: 50rpx 66rpx;
  margin-bottom: 100rpx;
}

.courseDetail .info {
  margin-bottom: 20rpx;
}

.courseDetail .info>text {
  color: #999;
  margin-right: 20rpx;
}

.courseDetail .title {
  font-size: 44rpx;
  color: #333;
  margin-bottom: 30rpx;
}

.courseDetail .article {
  font-size: 24rpx;
  color: #999;
}

.operate button{
  background: #fff;
  padding: 0 50rpx;
}
.operate button.btn_empty{
  margin-left: 30rpx;
}

.operate button.btn_full{
  background:linear-gradient(90deg,rgba(70,144,255,1) 0%,rgba(0,102,255,1) 100%);
}

.star {
  width: 180rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background:linear-gradient(90deg,rgba(70,144,255,1) 0%,rgba(0,102,255,1) 100%);
  box-shadow: 0px 6rpx 12rpx rgba(0, 102, 255, 0.2);
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  position: fixed;
  bottom: 100rpx;
  right: 180rpx;
  opacity: 0.5
}
.star image{
  width: 42rpx;
  height: 40rpx;
  display: inline-block;
  margin-right: 10rpx;
}
.star text{
  font-size: 26rpx;
}
.share {
  width:100rpx;
  height:100rpx;
  border-radius: 50rpx;
  background:rgba(42,42,42,1);
  box-shadow:0px 8px 20px rgba(0,0,0,0.2);
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  position: fixed;
  bottom: 100rpx;
  right: 50rpx;
}
.share image{
  width: 34rpx;
  height: 36rpx;
}
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-content {
  position: fixed;
  top: 20%;
  left: 50%;
  z-index: 9500;
  width: 600rpx;
  overflow: hidden;
  padding: 30rpx 0 50rpx;
  background: #fff;
  margin-left: -300rpx;
  border-radius: 12rpx;
}

.modal-content .contact_modal {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.modal-content .contact_modal image {
  width: 136rpx;
  height: 136rpx;
}

.modal-content .contact_modal .contact_text_modal {
  font-size: 30rpx;
  color: #4a4a4a;
  margin: 60rpx;
}
.modal-content button{
  width: 200rpx;
  padding: 0rpx;
  margin: 0 20rpx;
}