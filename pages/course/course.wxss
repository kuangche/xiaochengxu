/* pages/course/course.wxss */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}


.modal-content {
  position: fixed;
  top: 20%;
  left: 50%;
  z-index: 9500;
  width: 600rpx;
  overflow: hidden;
  padding: 30rpx 0 50rpx;
  background: #fff;
  margin-left: -300rpx;
  border-radius: 12rpx;
}

.modal-content .contact_modal {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.modal-content .contact_modal image {
  width: 136rpx;
  height: 136rpx;
}

.modal-content .contact_modal .contact_text_modal {
  font-size: 30rpx;
  color: #4A4A4A;
  margin: 60rpx;
}
