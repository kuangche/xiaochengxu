/**publish.wxss**/
page{
  background: #fff;
}
.publishCon{
  padding: 50rpx 30rpx;
}
.publishCon .section{
  margin-bottom: 30rpx;
}
.publishCon .section:last-child{
  margin-bottom: 100rpx;
}
.publishCon input{
  border: 1px solid #ccc;
  height: 88rpx;
  line-height: 68rpx;
  font-size: 34rpx;
  border-radius: 12rpx;
  padding: 10rpx 20rpx;
  background: #F8F8F8;
  color: #333;
}

.publishCon textarea,
.publishCon .replaceCon
{
  width: 100%;
  border-radius: 12rpx;
  border: 1px solid #ccc;
  padding: 20rpx;
  height: 600rpx;
  background: #F8F8F8;
  font-size: 28rpx;
  color: #333;
}
.publishCon .focuse{
  border: 1px solid #0066FF;
}

.publishCon .operate{
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
}
.publishCon .operate button{
  margin: 0 30rpx;
}
.publishCon .error{
  color: red;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-content {
  position: fixed;
  top: 20%;
  left: 50%;
  z-index: 9500;
  width: 600rpx;
  overflow: hidden;
  padding: 30rpx 0 50rpx;
  background: #fff;
  margin-left: -300rpx;
  border-radius: 12rpx;
}

.modal-content .contact_modal {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.modal-content .contact_modal image {
  width: 136rpx;
  height: 136rpx;
}

.modal-content .contact_modal .contact_text_modal {
  font-size: 30rpx;
  color: #4a4a4a;
  margin: 60rpx;
}
.modal-content button{
  width: 200rpx;
  padding: 0rpx;
  margin: 0 20rpx;
}
